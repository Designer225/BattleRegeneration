<?xml version="1.0" encoding="utf-16"?>
<Formula xmlns:i="http://www.w3.org/2001/XMLSchema-instance">
    <Name>[=BattleRegen_Quadratic]Quadratic</Name>
    <Expressions xmlns:d2p1="http://schemas.microsoft.com/2003/10/Serialization/Arrays">
        <!-- Evaluated in order -->
        <d2p1:string>solve( maxRegenRate * t + ( regenChangeRate * t^2 )/2 - health, t, 0, regenTime )</d2p1:string>
        <d2p1:string>maxRegenRate * (regenTime - answer) / regenTime</d2p1:string>
    </Expressions>
    <Variables>
        <!-- Evaluated in order -->
        <!-- Variables reserved: regenRate, regenTime, answer (result from previous evaluation) -->
        <!-- You may use members of Agent that use no other parameters other than 'this' (if not static) to get a value. -->
        <!-- You may also use static members of other classes that do the same. -->
        <!-- Finally, you may define variables that themselves are mathematical results of others -->
        <!-- Define your variables here -->
        <Variable>
            <Name>health</Name>
            <ValueOrType>TaleWorlds.MountAndBlade.Agent</ValueOrType>
            <TypeMember>Health</TypeMember>
        </Variable>
        <Variable>
            <Name>maxRegenRate</Name>
            <Expression>2 * regenRate</Expression>
        </Variable>
        <Variable>
            <Name>regenChangeRate</Name>
            <Expression>-maxRegenRate / regenTime</Expression>
        </Variable>
    </Variables>
</Formula>
